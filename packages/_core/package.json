{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@topp/_core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/lib.ts",
      "default": "./target/tsc/src/lib.js"
    },
    "./*": {
      "types": "./src/*.ts",
      "default": "./target/tsc/src/*.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check::eslint": "TIMING=1 eslint .",
    "check::prettier": "prettier --ignore-path=../../.gitignore --check .",
    "test": "vitest run"
  },
  "peerDependencies": {
    "compression": ">=1 <2",
    "express": ">=4 <5",
    "helmet": ">=7 <8",
    "next": ">=13 <14"
  },
  "peerDependenciesMeta": {
    "compression": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "helmet": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  }
}
