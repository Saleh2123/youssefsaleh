{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@topp/_config.tsc/base.json",

  "include": [
    "./*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./target/next/development/types/**/*.ts",
    "./target/next/production/types/**/*.ts",
    "./target/next/test/types/**/*.ts",
    "./tests/**/*.ts"
  ],

  "exclude": [],

  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "plugins": [{ "name": "next" }],
    "rootDir": "."
  }
}
